{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@dynamic-api": [
        "libs/dynamic-api/src"
      ],
      "@dynamic-api/*": [
        "libs/dynamic-api/src/*"
      ]
    }
  },
  "include": ["libs/**/*.ts"],
  "exclude": ["node_modules"]
}
