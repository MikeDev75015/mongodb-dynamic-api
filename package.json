{
  "name": "mongodb-dynamic-api",
  "version": "1.2.0-beta.1",
  "description": "Auto generated CRUD API for MongoDB using NestJS",
  "author": "MickaÃ«l NODANCHE <mikeonline75@gmail.com> (https://cv-mikeonline.web.app)",
  "homepage": "https://mikedev75015.github.io",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --runInBand",
    "test-cov": "jest --runInBand --coverage",
    "test:ci:junit": "jest --ci --runInBand --coverage --testResultsProcessor=jest-junit",
    "test:ci:sonar": "jest --ci --runInBand --coverage --testResultsProcessor=jest-sonar-reporter",
    "compodoc": "npx compodoc -p tsconfig.json libs/dynamic-api/src --theme postmark",
    "pre-release-tag": "git tag -f prerelease && git push -f origin prerelease",
    "prerelease": "release-it --ci --preRelease=beta --no-git.requireUpstream",
    "release": "release-it --ci",
    "publish-prerelease": "npm publish ./dist --tag prerelease",
    "publish-release": "npm publish ./dist --tag latest"
  },
  "keywords": [
    "nestjs",
    "mongodb",
    "dynamic-api",
    "crud"
  ],
  "dependencies": {
    "@nestjs/common": "^10.3.2",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.2",
    "@nestjs/mongoose": "^10.0.4",
    "@nestjs/platform-express": "^10.3.2",
    "@nestjs/swagger": "^7.3.0",
    "@types/lodash": "^4.14.202",
    "builder-pattern": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "lodash": "^4.17.21",
    "mongoose": "^8.1.1",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.23",
    "@golevelup/ts-jest": "^0.4.0",
    "@nestjs/cli": "^10.3.1",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.2",
    "@release-it/bumper": "^6.0.1",
    "@release-it/conventional-changelog": "^8.0.1",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^3.2.5",
    "release-it": "^17.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "libs",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "./**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/"
    ],
    "coveragePathIgnorePatterns": [
      "index.ts"
    ],
    "moduleNameMapper": {
      "@dynamic-api/(.*)": "<rootDir>/dynamic-api/src/$1",
      "@dynamic-api": "<rootDir>/dynamic-api/src"
    },
    "reporters": [
      "default"
    ]
  },
  "jestSonar": {
    "reportPath": "reports/sonar"
  },
  "publishConfig": {
    "access": "public"
  }
}
